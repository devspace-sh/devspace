{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "lib": ["dom", "es2015", "es2016", "es2017"], // es6, es7, es8
    "target": "es5",
    "module": "esnext",
    "jsx": "react", // "preserve" would throw error
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "strict": true, //	Enable all strict type checking options. Enabling --strict enables --noImplicitAny, --noImplicitThis,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": false
  },
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", "jest", "src/**/*.stories.tsx"]
}
